@import "mixin"


button(width)
  text-align center
  box-sizing border-box
  -webkit-box-sizing border-box
  border-radius 4px
  width width
  a
    display block
    width 100%
    height 100%
    text-decoration none

.primaryButton
  button(140px)
  padding 1em 0
  font-size 15px
  background-image linear-gradient( 0deg, rgb(252,102,0) 1%, rgb(245,73,0) 50%, rgb(250,97,0) 51%, rgb(255,120,0) 51%, rgb(255,187,15) 99%, rgb(255,238,195) 100%)
  box-shadow  0px 1px 2px 0px rgba(115, 115, 115, 0.95)
  border solid 2px #ff8905
  span
    color #FFF !important
    font-weight bold
    text-decoration none !important
    vertical-align middle
  a
    padding 1em 0
    margin -1em 0
.primaryButton--disable,
.primaryButton--disable--all
  @extends .primaryButton
  background-image linear-gradient( 0deg, rgb(194,194,194) 1%, rgb(191,191,191) 50%, rgb(188,188,188) 100%)
  box-shadow  0px 1px 2px 0px rgba(115, 115, 115, 0.95)
  border solid 2px #c0c0c0
.primaryButton--l
  @extends .primaryButton
  width 100%
.secondaryButton
  button(140px)
  padding 0.5em 0
  font-size 12px
  background #fff
  border solid 1px #00a307
  span
    color #00a307 !important
    font-weight bold
    text-decoration none !important
    vertical-align middle
  a
    padding 0.5em 0
    margin -0.5em 0
  &--single
    button(140px)
    padding 0.5em 0
    font-size 12px
    background #fff
    border solid 1px #00a307
    text-decoration none



.thirdlyButton
  button(100px)
  padding 0.5em 0
  font-size 12px
  background #ffad00
  display table-cell
  span
    color #fff !important
    font-weight bold
    text-decoration none !important
    vertical-align middle
  a
    padding 0.5em 0
    margin -0.5em 0

.cancelButton
  button(100px)
  padding 1em 0
  font-size 12px
  background-image linear-gradient( rgb(239,239,239) 1%, rgb(218,218,218) 50%, rgb(191,191,191) 51%, rgb(218,218,218) 100%)
  box-shadow  0px 1px 2px 0px rgba(115, 115, 115, 0.95)
  border solid 2px #c0c0c0
  display table-cell
  span
    color #000 !important
    font-weight bold
    text-decoration none !important
    vertical-align middle
  a
    padding 1em 0
    margin -1em 0