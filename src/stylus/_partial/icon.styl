@import "mixin"
@import "sprite"

sprite($sprite)
  background url(/img/sprite.png) no-repeat $sprite[2] $sprite[3]
  width $sprite[4]
  height $sprite[5]
  text-indent -9999px
  display inline-block
  margin-right 5px
  vertical-align middle

retina($x)
  round($x / 2)

r-sprite($sprite)
  background url(/img/sprite.png) no-repeat retina($sprite[2]) retina($sprite[3])
  background-size retina($sprite[6]) retina($sprite[7])
  width retina($sprite[4])
  height retina($sprite[5])
  text-indent -9999px

/*!
```
<span class="icon--brochure"></span>
<span class="icon--arrow_right"></span>
```
*/

.icon
  &--areaPink
    r-sprite($area_pink)



$icon-new
  display block
  padding 1px 0
  position absolute
  width 30px
  content 'NEW'
  text-align center
  background #ffad00
  font-size 10px
  font-weight bold
  color #FFF


icon-content-back(width, background)
  padding 1px 0
  width width
  text-align center
  background background
  font-size 10px
  font-weight bold
  color #FFF
  border-radius 2px

.icon-must
  icon-content-back(30px, #ffad00)
  display block

.icon-paid
  icon-content-back(30px, #fe0000)
  display inline-block

.icon-free
  icon-content-back(30px, #d9d9d9)
  display inline-block
  color #000

.icon-nextDay
  padding 0
  icon-content-back(auto, #fff)
  display inline-block
  color #00a40a
  border 1px solid #00a40a